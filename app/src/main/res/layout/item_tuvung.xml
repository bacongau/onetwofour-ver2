<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item">

    <ImageView
        android:id="@+id/img_tuvung"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_word_tuvung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#504F4F"
        android:text="Academy /əˈkæd.ə.mi/ Học viện"
        app:layout_constraintEnd_toEndOf="@+id/img_tuvung"
        app:layout_constraintStart_toStartOf="@+id/img_tuvung"
        app:layout_constraintTop_toBottomOf="@+id/img_tuvung" />

    <TextView
        android:id="@+id/tv_desc_tuvung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#514F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_word_tuvung"
        app:layout_constraintStart_toStartOf="@+id/tv_word_tuvung"
        app:layout_constraintTop_toBottomOf="@+id/tv_word_tuvung" />

</androidx.constraintlayout.widget.ConstraintLayout>