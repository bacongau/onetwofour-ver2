<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item">

    <ImageView
        android:id="@+id/img_baidoc"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tea" />

    <TextView
        android:id="@+id/tv_tenbaidoc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#514F4F"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_baidoc"
        app:layout_constraintEnd_toStartOf="@+id/btn_xembaidoc"
        app:layout_constraintStart_toEndOf="@+id/img_baidoc"
        app:layout_constraintTop_toTopOf="@+id/img_baidoc"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_xembaidoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Xem"
        android:background="@drawable/custom_button_allapp"
        app:layout_constraintBottom_toBottomOf="@+id/img_baidoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_baidoc" />

</androidx.constraintlayout.widget.ConstraintLayout>